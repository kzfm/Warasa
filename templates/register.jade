html
  body
    | {% extends "layout.html" %}
    | {% block body %}
    h2 Register Your Account
    | {% if error %}
    p.error
      strong Error:
      | {{ error }}{% endif %}
      form(action='{{ url_for(\'register\') }}', method='post')
        dl
          dt
            | Username:
            dd
              input(type='text', name='username')
              dt
                | Password:
                dd
                  input(type='password', name='password')
                  dt
                    | ReType Password:
                    dd
                      input(type='password', name='retype_password')
                      dd
                        input(type='submit', value='register')
      | {% endblock %}
